{% assign highlights = site.data.project_highlights %}
{% if highlights and highlights.size > 0 %}
  <div class="project-highlights">
    <div class="row">
      {% for item in highlights %}
        <div class="col-lg-6 col-md-6 col-sm-12 mb-4 d-flex">
          <div class="card w-100 shadow-sm">
            {% if item.image %}
              <div class="card-img-top-wrapper">
                {% include figure.liquid loading="lazy" path=item.image class="card-img-top img-fluid" alt=item.title %}
              </div>
            {% endif %}
            <div class="card-body d-flex flex-column">
              <h3 class="card-title">{{ item.title }}</h3>
              {% if item.summary %}
                <p class="card-text flex-grow-1">{{ item.summary }}</p>
              {% endif %}
              <div class="highlight-links mt-2">
                {% if item.video_url %}
                  <a class="btn btn-sm btn-outline-primary" href="{{ item.video_url }}" target="_blank" rel="noopener">
                    watch video
                  </a>
                {% endif %}
                {% if item.paper_url %}
                  <a class="btn btn-sm btn-outline-primary" href="{{ item.paper_url }}" target="_blank" rel="noopener">
                    read paper
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}
